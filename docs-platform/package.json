{
  "name": "objectfs-docs",
  "version": "1.0.0",
  "description": "Interactive documentation platform for ObjectFS",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "npm run build:docs && npm run build:client",
    "build:docs": "vitepress build",
    "build:client": "vite build client",
    "preview": "vitepress preview",
    "serve:docs": "vitepress dev",
    "serve:api": "node src/api-server.js",
    "test": "jest",
    "lint": "eslint src/ client/",
    "format": "prettier --write src/ client/"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "yaml": "^2.3.4",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-container": "^3.0.0",
    "prismjs": "^1.29.0",
    "socket.io": "^4.7.4",
    "dockerode": "^4.0.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "vitepress": "^1.0.0",
    "vite": "^5.0.10",
    "vue": "^3.3.8",
    "@vue/compiler-sfc": "^3.3.8",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5"
  },
  "keywords": [
    "objectfs",
    "documentation",
    "api",
    "filesystem",
    "fuse",
    "object-storage"
  ],
  "author": "ObjectFS Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
